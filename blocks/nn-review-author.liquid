{% doc %}
  NN Review Author Block

  Displays the review author's name.
  Uses closest.metaobject.nn_reviews to access review data.

  @example
  Add this block inside a review card or any context with nn_reviews metaobject
{% enddoc %}

{% liquid
  assign block_settings = block.settings
  assign review = closest.metaobject.nn_reviews
  assign author_name = review.author_display_name.value
%}

{% if author_name != blank %}
  <span
    class="nn-review-author size-style"
    style="{% render 'size-style', settings: block_settings %}"
    {{ block.shopify_attributes }}
  >
    {{ author_name }}
  </span>
{% endif %}

{% stylesheet %}
  .nn-review-author {
    font-weight: 600;
    display: inline-block;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "NN Review Author",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "Displays the author name from a review metaobject. Add inside a NN Review Card or context with nn_reviews."
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "select",
      "id": "type_preset",
      "label": "Preset",
      "options": [
        { "value": "paragraph", "label": "Paragraph" },
        { "value": "h5", "label": "H5" },
        { "value": "h6", "label": "H6" }
      ],
      "default": "paragraph"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "options": [
        { "value": "fit-content", "label": "Fit" },
        { "value": "100%", "label": "Fill" }
      ],
      "default": "fit-content"
    },
    {
      "type": "text_alignment",
      "id": "alignment",
      "label": "Alignment",
      "default": "left",
      "visible_if": "{{ block.settings.width != 'fit-content' }}"
    }
  ],
  "presets": [
    {
      "name": "NN Review Author",
      "category": "NN Review"
    }
  ]
}
{% endschema %}
