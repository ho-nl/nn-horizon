{% doc %}
  NN Review Verified Badge Block

  Displays a verification badge for verified buyers or reviewers.
  Uses closest.metaobject.nn_reviews to access review data.

  @example
  Add this block inside a review card or any context with nn_reviews metaobject
{% enddoc %}

{% liquid
  assign block_settings = block.settings
  assign review = closest.metaobject.nn_reviews

  assign is_verified_buyer = false
  assign is_verified_reviewer = false

  if review.order.value != blank
    assign is_verified_buyer = true
  elsif review.author.value != blank
    assign is_verified_reviewer = true
  endif
%}

{% if is_verified_buyer or is_verified_reviewer %}
  <div
    class="nn-review-verified nn-review-verified--{{ block_settings.style }} {{ block_settings.type_preset }}"
    style="{% render 'typography-style', settings: block_settings %}"
    {{ block.shopify_attributes }}
  >
    {% case block_settings.icon_style %}
      {% when 'icon' %}
        <svg class="nn-review-verified__icon" width="1em" height="1em" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      {% when 'checkmark' %}
        <span class="nn-review-verified__checkmark">✓</span>
    {% endcase %}
    <span class="nn-review-verified__text">
      {% if is_verified_buyer %}
        {{ block_settings.verified_buyer_text }}
      {% else %}
        {{ block_settings.verified_reviewer_text }}
      {% endif %}
    </span>
  </div>
{% endif %}

{% stylesheet %}
  .nn-review-verified {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.25em;
    width: fit-content;
  }

  .nn-review-verified--success {
    color: var(--color-success, #2ecc71) !important;
  }

  .nn-review-verified--primary {
    color: var(--color-primary) !important;
  }

  .nn-review-verified--foreground {
    color: var(--color-foreground) !important;
    opacity: 0.8;
  }

  .nn-review-verified__icon {
    flex-shrink: 0;
  }

  .nn-review-verified__checkmark {
    flex-shrink: 0;
    font-size: 0.9em;
  }

  .nn-review-verified__text {
    white-space: nowrap;
  }
{% endstylesheet %}

